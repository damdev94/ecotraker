  <div class="container-dark-blue">
  <div class="progress-container">
    <div class="progression-bar-full">
      <div class= "icon-home">
        <i class="fa-solid fa-house home-logo-place"></i>
      </div>
    </div><div class="progression-bar"></div>
  </div>
    <h2 class="secondary-title">Enter the name of your locations of the week</h2>
    <div class="container-inside">
        <% if params[:empty_place] %>
           <p class="error-message">the user must have at least one registered place</p>
        <% end %>
        <%= render 'form', new: @place %>

          <div class="scroller">
            <div class="all-places">
              <% @places.reverse_each do |place| %>
                <div class="places">
                  <div class="place"><%= place.name %></div>
                    <%= link_to place_path(place), data: { turbo_method: :delete, confirm: 'Are you sure?' } do %>
                      <i class="fa-solid fa-trash-can"></i>
                    <% end %>
                </div>
              <% end %>
        </div>
      </div>
    </div>
    <%= link_to "Next", new_vehicle_path, class: "button-green secondary-title"  %>
  </div>
