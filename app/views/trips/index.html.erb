<div class="container">
  <h1 class="main-title">My trips</h1>
  <h2 class="secondary-title">Based on my weekly activity</h1>
    <% @trips.each do |trip| %>
    <div class="container-trip">
      <div class="container-inside">
        <%= trip.label %><br>
        <%= trip.vehicle.brand%>
      </div>
      <%= link_to edit_trip_path(trip) do %>
        <i class="fa-solid fa-pencil"></i>
      <% end %>
      <%= link_to trip_path(trip), data: { turbo_method: :delete, confirm: 'Are you sure?' } do%>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
<% end %>

    <br>
    <br>

  <%= link_to "Create a trip", new_trip_path, class: "button-green secondary title" %>
</div>
